{
  "name": "GitHub Classroom Evaluator",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:0-18",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "typescript.preferences.inlayHints.parameterNames.enabled": "all",
        "typescript.preferences.inlayHints.variableTypes.enabled": true,
        "editor.formatOnSave": true
      }
    }
  },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Evaluator API",
      "visibility": "public"
    }
  },

  "postCreateCommand": "npm install && npm run build",
  "postStartCommand": "echo 'ðŸš€ Codespace prÃªt ! Utilisez npm run start:web pour dÃ©marrer l\\'API'",

  "remoteUser": "node"
}
