{
  "apps": [
    {
      "name": "evaluator-api",
      "script": "dist/web-server.js",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "log_file": "logs/api.log",
      "out_file": "logs/api-out.log",
      "error_file": "logs/api-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "time": true
    }
  ]
}
