JS_MAX_SCORE=0
ACCESSIBILITY_MAX_SCORE=0
TOTAL_MAX_SCORE=12  # Total selon le barème réel

# Fichiers à analyser (séparés par des virgules)
FILES_TO_ANALYZE="index.html,style.css"

# Niveau des étudiants
NIVEAU="Débutant"

# Seuils de réussite adaptés au barème sur 12 points
EXCELLENT_THRESHOLD=83  # 10/12 points (Avancé)
GOOD_THRESHOLD=67       # 8/12 points (Compétent) 
PASSING_THRESHOLD=50    # 6/12 points (Basique)

# Configuration spécifique selon le type d'exercice
EXERCISE_TYPE="html_css_basic"

# Critères spécifiques d'évaluation
HTML_CRITERIA="DOCTYPE,lang,title,semantic_tags,validation"
CSS_CRITERIA="syntax,properties,responsive,organization"

